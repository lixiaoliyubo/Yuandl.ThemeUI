<Page x:Class="Yuandl.ThemeUI.Sample.Views.Pages.FormItemPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Yuandl.ThemeUI.Sample.Views.Pages" 
      xmlns:ui="http://schemas.yuandl.cn/xamltheme/2024/xaml" 
      xmlns:controls="clr-namespace:Yuandl.ThemeUI.Sample.Controls" 
      xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
      controls:PageControlDocumentation.DocumentationType="{x:Type ui:FormItem}"
      xmlns:models="clr-namespace:Yuandl.ThemeUI.Sample.Models" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AnchorPage">

    <StackPanel Orientation="Vertical">
        <smtx:XamlDisplay UniqueKey="FormItemSample1" Margin="20" Tag="FormItem Example Demonstration">
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Width="500">
                <ui:FormItem Prefix="Full Name：" PrefixWidth="150">
                    <ui:TextBox PlaceholderText="Full Name Value"/>
                </ui:FormItem>
                <ui:FormItem Prefix="Age：" PrefixWidth="150">
                    <ui:TextBox PlaceholderText="Age Value"/>
                </ui:FormItem>
                <ui:FormItem Prefix="Sex：" PrefixWidth="150">
                    <ui:TextBox PlaceholderText="Sex Value"/>
                </ui:FormItem>
            </StackPanel>
        </smtx:XamlDisplay>
    </StackPanel>
</Page>
